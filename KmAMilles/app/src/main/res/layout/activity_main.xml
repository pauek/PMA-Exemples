<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eet.pma.kmamilles.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Km"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Kilòmetres"
            android:textSize="20dp"
            android:id="@+id/labelKm" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editKm"
            android:layout_alignBottom="@+id/labelKm"
            android:layout_toRightOf="@+id/labelKm"
            android:layout_alignRight="@+id/btn_a_km"
            android:layout_alignEnd="@+id/btn_a_km" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a Milles"
        android:id="@+id/btn_a_milles"
        android:layout_below="@+id/Km"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a Kilòmetres"
        android:id="@+id/btn_a_km"
        android:layout_below="@+id/Km"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Miles"
        android:layout_below="@+id/btn_a_milles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Milles"
            android:id="@+id/labelMiles"
            android:layout_below="@+id/btn_a_milles"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editMiles"
            android:layout_alignBottom="@+id/labelMiles"
            android:layout_toRightOf="@+id/labelMiles"
            android:layout_alignRight="@+id/editKm"
            android:layout_alignEnd="@+id/editKm" />
    </LinearLayout>


</RelativeLayout>
